<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myexample.magiccounter.MainCounter">




    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">



        <com.hitomi.cmlibrary.CircleMenu
            android:id="@+id/CircleMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        <Button
            android:id="@+id/b_minus1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/minus2"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="" />

        <TextView
            android:id="@+id/tv_counter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="#F00"
            android:textSize="25sp"
            android:layout_alignBaseline="@+id/b_minus1"
            android:layout_alignBottom="@+id/b_minus1"
            android:layout_alignStart="@+id/tv_counter2" />

        <Button
            android:id="@+id/b_plus1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/plus"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/b_minus2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/minus2"
            android:text=""
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_counter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="#F00"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/b_minus2"
            android:layout_alignBottom="@+id/b_minus2"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/b_plus2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/plus"
            android:text=""
            android:layout_below="@+id/seekBar2"
            android:layout_alignStart="@+id/b_plus1" />


        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="51dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView"
            android:layout_below="@+id/seekBar"
            android:layout_alignStart="@+id/textView2" />



        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:layout_above="@+id/tv_counter2"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView2"
            android:layout_above="@+id/seekBar2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp" />




    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
